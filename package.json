{
  "name": "katniss",
  "version": "1.0.0",
  "description": "A smart way to analyse your files",
  "main": "server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text gulp test && nyc report --reporter=lcov",
    "lint": "eslint .",
    "start": "nodemon ./src/index.js",
    "build": "babel src --out-dir ./dist --source-maps",
    "serve": "node ./dist/index.js",
    "ci-test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text gulp -f gulpfile.circleci.js test && nyc report --reporter=lcov",
    "prestart-dev": "npm test",
    "start-dev": "./prepare.dev.sh && cd ./src && nodemon index.js"
  },
  "repository": "github.com:mzaferyahsi/katniss.git",
  "author": "M. Zafer Yahsi <https://github.com/mzaferyahsi>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "kafka-node": "^3.0.1",
    "logstash-client": "^1.1.1",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-netflix": "^2.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-sonarjs": "^0.2.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-istanbul": "^1.1.1",
    "gulp-jshint": "^2.0.4",
    "gulp-mocha": "^6.0.0",
    "jshint": "^2.9.6",
    "jshint-stylish": "^2.2.1",
    "minimatch": "^3.0.4",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^13.1.0",
    "proxyquire": "^2.1.0",
    "sinon": "^7.1.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "statements": 80,
    "branches": 75,
    "lines": 80,
    "functions": 80,
    "reporters": [
      "lcov",
      "html",
      "json"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "/src/config/**/*"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
