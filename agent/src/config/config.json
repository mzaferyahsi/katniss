{
  "application": {
    "name" : "katniss-agent"
  },
  "kafka": {
    "hosts": "kafka-localhost:9092",
    "maxAsyncRequests": 5000,
    "topics": {
      "discoveredFiles" : "katniss-discovered",
      "files" : "katniss-files"
    },
    "consumerGroupId": "katniss-agent",
    "producerInterval": 1000
  },
  "log4js": {
    "appenders": {
      "out": {
        "type": "stdout"
      },
      "logstash": {
        "type": "@log4js-node/logstashudp",
        "host": "localhost",
        "port": 5000
      }
    },
    "categories": {
      "default": {
        "appenders": [
          "out",
          "logstash"
        ],
        "level": "debug"
      }
    }
  }
}
